<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05264E"
    android:orientation='vertical'>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#05264E"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/landmarkImage"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/landmarkName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sawy Cultural Wheel"
                android:textColor="#42D17B"
                android:textSize="22sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="#42D17B"
                    app:srcCompat="@drawable/star" />

                <TextView
                    android:id="@+id/landmarkRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="4.5/5"
                    android:textColor="#42D17B"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_marginLeft="21dp"
                    android:layout_toRightOf="@+id/landmarkRating"
                    android:background="#42D17B"
                    app:srcCompat="@drawable/ic_directions_car_black_48dp" />

                <TextView
                    android:id="@+id/dist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="12 Km"
                    android:textColor="#42D17B"
                    android:textSize="18sp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="27dp"
                    android:layout_height="27dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="3dp"
                    android:background="#42D17B"
                    app:srcCompat="@drawable/phone" />

                <TextView
                    android:id="@+id/landmarkNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="3dp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="0102 444 4482"
                    android:textAllCaps="false"
                    android:textColor="#42D17B"
                    android:textSize="18sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>